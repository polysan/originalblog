<%= form_for  @blog, html: {class: 'formfor'} do |f| %>
    <p class="label"><%= f.label :タイトル, style: 'font-size: 14px; color: black;' %></p>
    <div class="textfield"><%= f.text_field :title, placeholder: 'タイトル入力してください' %></div>
    <p class="label"><%= f.label :本文, style: 'font-size: 14px; color: black;' %></p>
    <div class="textarea"><%= f.text_area :text, placeholder: '本文を入力してください', style: 'height: 300px;' %></div>
    <a class="waves-effect waves-light btn"><%= f.submit  '投稿する' %></a>


<% end %>


