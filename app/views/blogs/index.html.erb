<% @blogs.each do |blog| %>
<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= blog.title %></span>
          <p><%= simple_format(blog.text) %></p>
        </div>
        <div class="card-action">
          <a href="#">show</a>
          <a href="#">edit</a>
          <a href="#">destroy</a>
        </div>
      </div>
    </div>
  </div>

<% end %>
